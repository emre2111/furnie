<div class="container landing-page-home">
  <div class="homepage-image-container" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('http://www.10stunninghomes.com/wp-content/uploads/minimalist-apartment-ukraine.jpg')" class="homepage-image">
    <div class="landingpage-header">
      <p class="landingpage-para">Welcome to Furnie</p>
      <h1>Rent Furniture <br>Fast & Simple</h1>
      <p class="landingpage-para">Explore our furniture available for rent in Berlin</p>
      <div class="form form-inline date-form">
        <%= simple_form_for(@booking) do |f| %>
        <div class="form">
          <%= f.input :starts_at, as: :string, input_html: { id: "start_date" },
          required: false, placeholder: "Rental start", label: false %>
          <%= f.input :ends_at, as: :string, input_html: { id: "end_date" },
          required: false, placeholder: "Rental ending", label: false %>
          <%= f.button :submit, "find furnitures", class: "btn-first"%>
          </div>
        <% end %>
      </div>
    </div>
</div>
</div>
