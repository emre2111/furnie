<div class="container">
 <div class="sidebar">
   <%= render 'shared/sidebar' %>
 </div>

 <div class="products-container">
  <h1>Furniture available for rent</h1>
  <div class="order_form">
    <%= render 'shared/order_form' %>
  </div>
  <% @products.each do |product| %>
    <%= render 'shared/card', product: product, booking: @booking %>
  <% end %>
  <%= paginate @products %>
 </div>
</div>
