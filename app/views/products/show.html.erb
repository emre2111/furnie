<div class="container">
    <div class="show-product">
      <div class="row">
        <div class="col-xs-12 col-sm-6">
      <div class="product-pic">
        <img class= "pic" src="<%= @product.photo%> ">
      </div>
    </div>
        <div class="col-xs-12 col-sm-6">
      <div class="product-description ">
        <div class="description">
          <div class="product-title">
            <h1><%= @product.name %></h1>
          </div>
          <h3><strong><%= humanized_money_with_symbol(@product.price * (@booking.ends_at - @booking.starts_at + 1).to_i) %> in total</strong></h3>
          <p>From
            <%= @booking.starts_at.strftime("%B") %>
            <%= @booking.starts_at.day %>
            until
            <%= @booking.starts_at.strftime("%B") %>
            <%= @booking.starts_at.day %>,
            <%= @booking.starts_at.year %>
            for <strong><%= humanized_money_with_symbol(@product.price) %> per day</strong></p>
          <p>Total renting period: <strong><%= (@booking.ends_at - @booking.starts_at + 1).to_i %> days</strong></p>
          <p><%= @product.description %> </p>
          <%= button_to "Add to your cart", booking_product_booking_items_path(@booking, @product), class: "btn btn-primary show" %>
          <%= link_to "Go to your cart", booking_path(@booking), class: "btn btn-ghost show" %>
        </div>
        <div class="back" src="https://img.icons8.com/material/96/000000/back.png">
          <%= link_to " < Back", booking_products_path(@booking), class: "back-btn" %>
          </div>
      </div>
    </div>
  </div>
    </div>
</div>

