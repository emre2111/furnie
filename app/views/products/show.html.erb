<div class="container">
  <div class="show-product">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="product-pic">
          <img class= "pic" src="<%= @product.photo%> ">
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="product-description ">
          <div class="description">
            <div class="product-title">
              <h1><%= @product.name %></h1>
            </div>
            <h3><strong><%= humanized_money_with_symbol(@product.price * (@booking.ends_at - @booking.starts_at + 1).to_i) %> in total</strong></h3>
            <p>From
              <%= @booking.starts_at.strftime("%B") %>
              <%= @booking.starts_at.day %>,
              <%= @booking.starts_at.year %>

              until
              <%= @booking.ends_at.strftime("%B") %>
              <%= @booking.ends_at.day %>,
              <%= @booking.ends_at.year %></p>

              <p>Total renting period: <strong><%= (@booking.ends_at - @booking.starts_at + 1).to_i %> days</strong> ( <%= humanized_money_with_symbol(@product.price) %> per day )</p>
              <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Necessitatibus architecto, odio veniam. In necessitatibus, </p>
              <div class="show-buttons"><%= button_to "Add to cart", booking_product_booking_items_path(@booking, @product), class: "btn btn-first show" %>

                <%= link_to "Go to cart", booking_path(@booking), class: "btn btn-ghost show" %></div>
                <div class="navigation-buttons">
                  <div class="back">
                    <%= link_to "< Back to search results", booking_products_path(@booking), class: "back-btn" %>
                  </div>
                  <div class="back">
                    <%= link_to "Go random instead >", randomize_booking_path(@booking), class: "back-btn" %>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

